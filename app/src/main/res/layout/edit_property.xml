                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Ubah Properti"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"

                android:textSize="20dp" />

            <android.support.v7.widget.CardView
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center">

                        <!--<ImageView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginRight="10dp"-->
                        <!--android:src="@drawable/ic_create_black_24dp">-->
                        <!--></ImageView>-->

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_edit_judul"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12px">

                            <EditText
                                android:id="@+id/et_edit_judul"
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:autoText="false"
                                android:background="@drawable/abc_textfield_search_material"
                                android:hint="Judul (Wajib)"
                                android:textSize="15dp" />
                        </android.support.design.widget.TextInputLayout>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center">

                        <!--<ImageView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginRight="10dp"-->
                        <!--android:src="@drawable/ic_create_black_24dp">-->
                        <!--></ImageView>-->

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_edit_deskripsi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12px">

                            <EditText
                                android:id="@+id/et_edit_deskripsi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autoText="false"
                                android:background="@drawable/abc_textfield_search_material"
                                android:hint="Deskripsi"
                                android:inputType="textMultiLine"
                                android:textSize="15dp" />
                        </android.support.design.widget.TextInputLayout>
                    </TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:id="@+id/tv_err_edit_Property"
                        android:text="Properti wajib dipilih! "
                        android:visibility="gone"
                        android:textAppearance="@style/TextAppearance.Design.Error"
                        />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center">

                        <!--<ImageView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginRight="10dp"-->
                        <!--android:src="@drawable/ic_create_black_24dp">-->
                        <!--></ImageView>-->


                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/spin_edit_type_property"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"></android.support.v7.widget.AppCompatSpinner>

                    </TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:id="@+id/tv_err_edit_RentType"
                        android:text="Tipe sewa wajib dipilih! "
                        android:visibility="gone"
                        android:textAppearance="@style/TextAppearance.Design.Error"
                        />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center">

                        <!--<ImageView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginRight="10dp"-->
                        <!--android:src="@drawable/ic_create_black_24dp">-->
                        <!--></ImageView>-->


                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/spin_edit_rent_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"></android.support.v7.widget.AppCompatSpinner>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center">

                        <!--<ImageView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginRight="10dp"-->
                        <!--android:src="@drawable/ic_create_black_24dp">-->
                        <!--></ImageView>-->

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_edit_harga"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12px">

                            <EditText
                                android:id="@+id/et_edit_harga"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autoText="false"
                                android:background="@drawable/abc_textfield_search_material"
                                android:hint="Harga (Wajib)"
                                android:inputType="number"
                                android:textSize="15dp" />
                        </android.support.design.widget.TextInputLayout>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center">

                        <!--<ImageView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginRight="10dp"-->
                        <!--android:src="@drawable/ic_create_black_24dp">-->
                        <!--></ImageView>-->

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_edit_ukuran"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12px">

                            <EditText
                                android:id="@+id/et_edit_ukuran"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autoText="false"
                                android:background="@drawable/abc_textfield_search_material"
                                android:hint="Ukuran (Wajib)"
                                android:inputType="number"
                                android:textSize="15dp" />
                        </android.support.design.widget.TextInputLayout>
                    </TableRow>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="5dp"
                        android:text="Alamat"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"

                        android:textSize="20dp" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center">

                        <!--<ImageView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginRight="10dp"-->
                        <!--android:src="@drawable/ic_create_black_24dp">-->
                        <!--></ImageView>-->

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_edit_alamat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12px">

                            <EditText
                                android:id="@+id/et_edit_alamat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autoText="false"
                                android:background="@drawable/abc_textfield_search_material"
                                android:hint="Alamat"
                                android:inputType="textMultiLine"
                                android:textSize="15dp" />
                        </android.support.design.widget.TextInputLayout>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center">

                        <!--<ImageView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginRight="10dp"-->
                        <!--android:src="@drawable/ic_create_black_24dp">-->
                        <!--></ImageView>-->

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_edit_kota"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12px">

                            <AutoCompleteTextView
                                android:id="@+id/et_edit_kota"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autoText="false"
                                android:background="@drawable/abc_textfield_search_material"
                                android:hint="Kota"
                                android:inputType="textMultiLine"
                                android:textSize="15dp" />
                        </android.support.design.widget.TextInputLayout>

                    </TableRow>

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="5dp"
                        android:text="Atur Lokasi Di Google Map"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="20dp" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center">

                        <!--<ImageView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginRight="10dp"-->
                        <!--android:src="@drawable/ic_create_black_24dp">-->
                        <!--></ImageView>-->

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_edit_latitude"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12px">

                            <EditText
                                android:id="@+id/et_edit_latitude"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autoText="false"
                                android:background="@drawable/abc_textfield_search_material"
                                android:hint="Latitude"
                                android:textSize="15dp" />
                        </android.support.design.widget.TextInputLayout>

                    </TableRow>


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center">

                        <!--<ImageView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginRight="10dp"-->
                        <!--android:src="@drawable/ic_create_black_24dp">-->
                        <!--></ImageView>-->

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_edit_longitude"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12px">

                            <EditText
                                android:id="@+id/et_edit_longitude"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autoText="false"
                                android:background="@drawable/abc_textfield_search_material"
                                android:hint="Longitude"
                                android:textSize="15dp" />
                        </android.support.design.widget.TextInputLayout>


                    </TableRow>

                    <TextView
                        android:id="@+id/tv_edit_open_map"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tampilkan Map"
                        android:layout_margin="10dp"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="5dp"
                        android:text="Fasilitas Properti"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="20dp" />


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:id="@+id/ll_edit_fasil_dalam"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        </LinearLayout>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:id="@+id/ll_edit_cb1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"></LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_edit_cb2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"></LinearLayout>
                    </TableRow>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="5dp"
                        android:text="Fasilitas Lainnya"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="20dp" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:id="@+id/ll_edit_fasil_lainnya"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"></LinearLayout>
                    </TableRow>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="5dp"
                        android:text="Galeri"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="20dp" />


                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_edit_add_galerry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="10dp"
                        android:text="Add+"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/tv_edit_error_galery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Galery minimal 1 foto!"
                        android:textAppearance="@style/TextAppearance.Design.Error"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/ll_edit_galery"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:layout_margin="5dp"
                        android:background="#ffffff"
                        android:elevation="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_edit_galery"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp"></android.support.v7.widget.RecyclerView>
                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_edit_urlvideo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12px">

                        <EditText
                            android:id="@+id/et_edit_urlvideo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoText="false"
                            android:background="@drawable/abc_textfield_search_material"
                            android:hint="URL Video"
                            android:textSize="15dp" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="350dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/header"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/calendar_top">

                    <RelativeLayout
                        android:id="@+id/previous"
                        android:layout_width="40dip"
                        android:layout_height="30dip"
                        android:layout_alignParentLeft="true">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/arrow_left" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/edit_title_cal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColor="#000000"
                        android:textSize="15dip"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:id="@+id/next"
                        android:layout_width="40dip"
                        android:layout_height="30dip"
                        android:layout_alignParentRight="true">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/arrow_right" />
                    </RelativeLayout>
                </RelativeLayout>

                <GridView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/gridview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="7"
                    android:stretchMode="columnWidth" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_edit_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#ffffff"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone">

        <fragment
            android:id="@+id/edit_map5"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="10dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_edit_set_location"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Atur Lokasi"
                android:textColor="#ffffff" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_edit_cancelmap"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:textColor="#ffffff" />
        </TableRow>
    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_edit_property"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="10dp"
        android:text="Ubah"
        android:textColor="#ffffff" />

</LinearLayout>